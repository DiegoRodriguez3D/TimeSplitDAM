<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.AjustesNewPerfilActivity">

    <Button
        android:id="@+id/filledButton_Guardar2"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/muli_black"
        android:text="@string/ButtonGuardar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="@dimen/redondeoEsquinas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:outlineProvider="none"
        android:padding="@dimen/PaddingWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TituloAvanzado">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField_NewPerfil_ColorTrabajo"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color trabajo"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/textFillColor"
            app:hintTextColor="?attr/textFillColor"
            app:startIconDrawable="@drawable/ic_round_format_color_fill_24"
            app:startIconTint="?attr/textFillColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_NewPerfil_ColorTrabajo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/muli_semibold"
                android:inputType="none"
                android:singleLine="true"
                android:textSize="@dimen/textInputSize"
                android:textColor="?attr/textFillColor"
                android:textColorHighlight="?attr/textFillColor"
                android:textColorHint="?attr/textFillColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField_NewPerfil_ColorDescanso"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color descanso"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/textFillColor"
            app:hintTextColor="?attr/textFillColor"
            app:startIconDrawable="@drawable/ic_round_format_color_fill_24"
            app:startIconTint="?attr/textFillColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_NewPerfil_ColorDescanso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/muli_semibold"
                android:inputType="none"
                android:singleLine="true"
                android:textSize="@dimen/textInputSize"
                android:textColor="?attr/textFillColor"
                android:textColorHighlight="?attr/textFillColor"
                android:textColorHint="?attr/textFillColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField_NewPerfil_ColorPreparacion"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color prepraciÃ³n"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/textFillColor"
            app:hintTextColor="?attr/textFillColor"
            app:startIconDrawable="@drawable/ic_round_format_color_fill_24"
            app:startIconTint="?attr/textFillColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_NewPerfil_ColorPreparacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/muli_semibold"
                android:inputType="none"
                android:singleLine="true"
                android:textColor="?attr/textFillColor"
                android:textSize="@dimen/textInputSize"
                android:textColorHighlight="?attr/textFillColor"
                android:textColorHint="?attr/textFillColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField_NewPerfil_Sonido"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sonido"
            app:boxCornerRadiusBottomEnd="10dp"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/textFillColor"
            app:hintTextColor="?attr/textFillColor"
            app:startIconDrawable="@drawable/ic_round_music_note_24"
            app:startIconTint="?attr/textFillColor">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/EditText_Opciones_Tema"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/muli_semibold"
                android:inputType="none"
                android:textSize="@dimen/textInputSize"
                android:singleLine="true"
                app:endIconMode="dropdown_menu" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_TituloAvanzado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/muli_black"
        android:text="AJUSTES PERFIL"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="?attr/textFillColor"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/iconButton_Home"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:isScrollContainer="false"
            app:icon="@drawable/ic_round_home_24"
            app:iconSize="25dp"
            app:iconTint="?attr/textFillColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/iconButton_Back"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:isScrollContainer="false"
            app:icon="@drawable/ic_baseline_arrow_back_ios_24"
            app:iconSize="25dp"
            app:iconTint="?attr/textFillColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>